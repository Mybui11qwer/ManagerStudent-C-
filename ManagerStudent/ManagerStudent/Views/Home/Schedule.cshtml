@model ManagerStudent.Models.SINHVIEN
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<link rel="stylesheet" href="~/Content/UserPage/Function/Schedule.css" />
<section class="content">
    <h3>Lịch học</h3>
    <div class="container-Sche">
        <div class="top-panel">
            <label for="year">Năm học:</label>
            <select id="year">
                <option value="2025-2026">2025-2026</option>
                <option value="2024-2025">2024-2025</option>
                <option value="2023-2024">2023-2024</option>
                <option value="2022-2023">2022-2023</option>
            </select>
            <label for="semester">Học kỳ:</label>
            <select id="semester">
                @for (int hk = 1; hk <= 3; hk++)
                {
                    <option value="Học kỳ @hk">Học kỳ @hk</option>
                }
            </select>
            <label for="week">Tuần:</label>
            <select id="week">
                @for (int week = 1; week <= 20; week++)
                {
                    <option value="@week">@week</option>
                }
            </select>
        </div>
        <table class="content-Schedule">
            <thead>
                <tr class="table_tr">
                    <th>Tiết</th>
                    <th>Thứ 2</th>
                    <th>Thứ 3</th>
                    <th>Thứ 4</th>
                    <th>Thứ 5</th>
                    <th>Thứ 6</th>
                    <th>Thứ 7</th>
                    <th>Chủ nhật</th>
                    <th>Tiết</th>
                </tr>
            </thead>
            <tbody>
                @for (int tiet = 1; tiet <= 15; tiet++)  // 15 tiết học
                {
                    <tr class="table_tr">
                        <td id="tiet">@tiet</td>
                        @for (int day = 1; day <= 7; day++)  // Hiển thị 7 ngày trong tuần
                        {
                            <td>
                                @foreach (var monhoc in Model.KHOA.MONHOCs)
                                {
                                    foreach (var lophocphan in monhoc.LOPHOCPHANs)
                                    {
                                        if (lophocphan.TietBD <= tiet && lophocphan.TietKT >= tiet && lophocphan.Thu == day.ToString())
                                        {
                                            <span class="class-title">@lophocphan.TenLHP</span><br />
                                            <span>@monhoc.TenMH (@monhoc.MaMH)</span><br />
                                            <span>LHP: @lophocphan.MaLHP</span><br />
                                            <span>Số tiết: </span><br />
                                            <span>Tiết: @lophocphan.TietBD - @lophocphan.TietKT</span><br />
                                            <span class="class-teacher">GV: @lophocphan.MaGV</span>
                                        }
                                    }
                                }
                            </td>
                        }
                        <td id="tiet">@tiet</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
