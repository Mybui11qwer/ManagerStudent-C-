<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Tên trường</title>
    <link rel="stylesheet" href="~/Content/Layout/AdminPage.css" />
    <link rel="icon" href="~/Image/Logo/Logo-DH-Ngoai-Ngu-Tin-Hoc-HUFLIT.png" style="width: 32px; height: 32px;" />
</head>
<body>
    <div class="sidebar">
        <h2>Quản trị viên</h2>
        <ul>
            <li><a href="~/Admin/Dashboard">Dashboard</a></li>
            <li>
                <a>Sinh Viên</a>
                <ul class="sub-menu">
                    <li><a href="~/Admin/ManagerStudent">Danh sách sinh viên</a></li>
                    <li><a href="~/Admin/AddNewStudent">Thêm sinh viên mới</a></li>
                </ul>
            </li>
            <li>
                <a>Giảng Viên</a>
                <ul class="sub-menu">
                    <li><a href="#">Danh sách giảng viên</a></li>
                    <li><a href="#">Thêm giảng viên mới</a></li>
                </ul>
            </li>
            <li>
                <a>Nhân viên Admin</a>
                <ul class="sub-menu">
                    <li><a href="#">Danh sách Admin</a></li>
                    <li><a href="#">Thêm Admin mới</a></li>
                </ul>
            </li>
            <li>
                <a>Quản lý chung</a>
                <ul class="sub-menu">
                    <li><a href="#">Khoa</a></li>
                    <li><a href="~/Admin/LHP">Lớp học phần</a></li>
                    <li><a href="#">Tình trạng học</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <header>
            <h1>Chào mừng đến với trang quản trị</h1>
            <div class="user-info">
                <span>Xin chào, @Session["MaAd" ?? "Admin hả"]</span>
                <a href="~/Account/Logout" class="logout">LogOut</a>
            </div>
        </header>
        @RenderBody()
    </div>
</body>
</html>
