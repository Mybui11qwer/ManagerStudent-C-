<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Tên trường</title>
    <link rel="icon" href="~/Image/Logo/Logo-DH-Ngoai-Ngu-Tin-Hoc-HUFLIT.png" style="width: 32px; height: 32px;" />
    <link rel="stylesheet" href="~/Content/UserPage/Header-Footer.css">
    <link rel="stylesheet" href="~/Content/UserPage/Function/Function-design-index.css">
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/Image/Logo/Logo-Portal.png" alt="Huflit University Logo">
        </div>
    </header>
    <nav class="navbar">
        <ul>
            <li><a href="#">Trang chủ</a></li>
            <li><a href="#">Thanh toán học phí</a></li>
            <li style="margin-left: auto">
                @if (Session["MaSV"] != null)
                {
                    <a href="~/Home/Information">@Session["MaSV"] | @Session["HoTen"]</a>
                }
                @if (Session["MaGV"] != null)
                {
                    <a href="~/GiangVien/Information">@Session["HoTen"]</a>
                }
                @if (Session["Email"] == null)
                {
                    <a href="~/Account/Login" id="login-link">
                        Đăng nhập
                    </a>
                }
            </li>
        </ul>
    </nav>
    @RenderBody()
    <footer>
        <h1 style="text-align: center;">Huflit Hello world</h1>
    </footer>
</body>
</html>
