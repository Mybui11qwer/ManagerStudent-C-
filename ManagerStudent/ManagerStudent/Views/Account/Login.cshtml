@model ManagerStudent.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="~/Content/UserPage/Login.css" />
<div class="login-container">
    <div class="login-box">
        <div class="logo">
            <img src="~/Image/Logo/Logo-DH-Ngoai-Ngu-Tin-Hoc-HUFLIT.png" alt="Huflit-icon">
            <h4>TRƯỜNG ĐẠI HỌC NGOẠI NGỮ - TIN HỌC TP. HỒ CHÍ MINH (HUFLIT)</h4>
            <p>Cổng thông tin đào tạo</p>
        </div>
        <form action="/Account/Login" method="post">
            <input type="text" name="EmailLogin" id="MSSV" placeholder="Email" required autocomplete="off">
            <input type="password" name="PasswordLogin" id="Password" placeholder="Password" required>
            <button type="submit">Đăng nhập</button>
        </form><br>
        <a href="#" class="ForgetPass">Quên mật khẩu</a>
        <div class="office-buttons" style="width: auto">
            <button class="office-student" style="display: flex;align-items: center; justify-content:flex-start; padding-left: 20px;"><img src="~/Image/Logo/icon-microsoft.png" style="background-color: aliceblue; width: 40px;height: 40px; margin-right: 8px;">Office 365 for Student</button>
            <button class="office-professor" style="display: flex; align-items: center; justify-content: flex-start; margin-top: 10px; padding-left: 20px;"><img src="~/Image/Logo/icon-microsoft.png" style="background-color: aliceblue; width: 40px;height: 40px; margin-right: 8px;">Office 365 for Professor</button>
        </div>
    </div>
</div>

