@model List<ManagerStudent.Models.SINHVIEN>
@{
    ViewBag.Title = "ManagerStudent";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/Content/Admin/ManagerStudent.css" />
<section>
    <select>
        <option>Khóa học</option>
        <option>2019-2023</option>
        <option>2020-2024</option>
        <option>2021-2025</option>
        <option>2022-2026</option>
        <option>2023-2027</option>
    </select>
    <select>
        <option>Khoa</option>
        @foreach(var khoa in Model.Select(s => s.KHOA))
            {
                <option>@khoa.TenKhoa</option>
            }
    </select>
    <input type="search" placeholder="tìm kiếm" />
</section>
<section class="user-table">
    <table>
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Tình trạng học</th>
                <th>Ngày sinh</th>
                <th>Khoa</th>
                <th>Khóa học</th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sinhvien in Model)
            {
                <tr>
                    <td>@sinhvien.HoTen</td>
                    <td>@sinhvien.SoDienThoai</td>
                    <td>@sinhvien.Email</td>
                    <td>@sinhvien.DiaChi</td>
                    <td>@sinhvien.TINHTRANGHOC.TinhTrang</td>
                    <td>@sinhvien.NgaySinh</td>
                    <td>@sinhvien.KHOA.TenKhoa</td>
                    <td>@sinhvien.KHOAHOC.TenKH</td>
                    <td>
                        <a href="~/Admin/UpdateStudent/@sinhvien.MaSV" class="edit">Chỉnh sửa</a>
                        <a href="~/Admin/DeleteStudent/@sinhvien.MaSV" class="delete">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

